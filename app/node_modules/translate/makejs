#!/bin/ksh

base="../../.."
base=`pwd`/${base}

export PATH=${base}/node_modules/.bin:$PATH

app=${base}/app
translate=${app}/node_modules/translate
fe_js=${app}/fe/js
js_files="dictionary.js translate.js"
index="index.js"

( cd ${translate};
  cat ${js_files} > ${index}
  cat ${index} | uglifyjs - --compress --mangle --output ${fe_js}/translate.min.js
)

